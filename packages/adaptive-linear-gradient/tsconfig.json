{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "baseUrl": "",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "**/__test__/*"]
}
