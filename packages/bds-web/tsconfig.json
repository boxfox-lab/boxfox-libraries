{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@emotion/core": ["src/types/.sink.d.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    ".storybook/**/*",
    "src/**/__tests__/*.(ts|tsx)",
    "src/**/*.spec.(ts|tsx)",
    "src/**/__stories__/**/*",
    "src/**/*.stories.(ts|tsx)"
  ]
}
